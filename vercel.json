{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    },
    {
      "source": "/index.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        },
        {
          "key": "X-Permitted-Cross-Domain-Policies",
          "value": "none"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/:path*" },
    { "source": "/:path*", "destination": "/index.html" }
  ],
  "redirects": [
    {
      "source": "/",
      "has": [
        {
          "type": "header",
          "key": "x-forwarded-proto",
          "value": "http"
        }
      ],
      "destination": "https://www.thynkflow.io/",
      "permanent": true
    }
  ],
  "env": {
    "VITE_BETA_MODE": "false",
    "VITE_SUPABASE_URL": "https://kruwbjaszdwzttblxqwr.supabase.co",
    "VITE_STRIPE_PUBLISHABLE_KEY": "pk_live_51STVWvDHHGSPqPV6uBh0N7nusRYmGaEMeA3Ly7sBj8MY9EzPh5rFCtoYdqv0wEx1XM9oyCBfuVwVdxZiDyn0bnCZ00UxJvf5pR"
  },
  "crons": [
    {
      "path": "/api/scheduled-polling",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/digest-emails",
      "schedule": "0 8 * * 1"
    }
  ]
}
